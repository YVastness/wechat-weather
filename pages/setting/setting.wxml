<!-- setting.wxml -->
<view>
    <scroll-view class="container" scroll-y="true" scroll-with-animation="true">
        <view class="city-selected">
            <view class="item" wx:for="{{citySelected}}" wx:key="dayIdx" wx:for-item="cityCode">
                <view class="name">{{weatherData[cityCode].realtime.city_name}}</view>
                <image class="pic" src="{{ weatherData[cityCode].realtime.weather.pic }}"></image>
                <view class="desc">
                    <text>{{weatherData[cityCode].realtime.weather.info}}</text>
                    <text>
                        {{weatherData[cityCode].realtime.wind.direct}} {{weatherData[cityCode].realtime.wind.power}}
                    </text>
                </view>
                <view class="temperature">
                    <text>{{weatherData[cityCode].realtime.weather.temperature}}°</text>
                </view>
                <view class="remove">
                    <icon type="cancel" size="15" bindtap="removeCity" data-city_code="{{ cityCode }}"/>
                </view>
            </view>
            <button class="city-choose" type="primary" loading="{{loading}}" disabled="{{disabled}}"
                    bindtap="showSelector">
                + 添加城市
            </button>
            <selector-component show="{{selectorVisible}}" key="O3QBZ-LPRAV-5GWPE-5MWZG-WZSQ5-YSBLS" referer="天气帮手"
                                hotCitys="北京,上海,天津,重庆,广州,深圳,成都,杭州" bindselect="onSelectCity"></selector-component>
        </view>
    </scroll-view>
</view>